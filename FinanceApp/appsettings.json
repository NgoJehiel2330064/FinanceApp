{
  "// Configuration des logs - définit le niveau de détail des messages de logging": {
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "AllowedHosts": "*",
    
    "// ConnectionStrings : stocke les informations de connexion aux bases de données": {
      "// C'est une bonne pratique de les mettre ici plutôt que dans le code": {
        "ConnectionStrings": {
          "// Chaîne de connexion PostgreSQL pour Docker": {
            "// Host=localhost : PostgreSQL tourne dans Docker mais expose le port sur localhost": "Host=localhost;Port=5432;Database=finance_db;Username=postgres;Password=admin123",
            "// Port=5432 : Port par défaut de PostgreSQL (défini dans docker-compose.yml)": "",
            "// Database=finance_db : Nom de la base de données (sera créée par les migrations)": "",
            "// Username=postgres : Utilisateur défini dans docker-compose.yml": "",
            "// Password=admin123 : Mot de passe défini dans docker-compose.yml": ""
          }
        }
      }
    },
    
    "// Configuration de l'API Gemini": {
      "Gemini": {
        "// ⚠️ SÉCURITÉ : Ne JAMAIS mettre la clé API ici !": {
          "//": {
            "// EN DÉVELOPPEMENT :": {
              "//": {
                "//": {
                  "// Utilisez User Secrets (déjà configuré)": "",
                  "// Commande : dotnet user-secrets set \"Gemini:ApiKey\" \"VOTRE_CLE\"": ""
                }
              }
            },
            "// EN PRODUCTION :": {
              "//": {
                "//": {
                  "// Utilisez des variables d'environnement": "",
                  "// Azure : Configuration dans App Settings": "",
                  "// Docker : docker run -e Gemini__ApiKey=\"VOTRE_CLE\"": "",
                  "// Linux : export Gemini__ApiKey=\"VOTRE_CLE\"": ""
                }
              }
            }
          }
        },
        
        // Modèle à utiliser (gemini-1.5-flash est rapide et gratuit)
        "Model": "gemini-1.5-flash",
        
        // Température : Contrôle la créativité (0 = déterministe, 1 = créatif)
        // Pour les conseils financiers, on veut de la cohérence donc température basse
        "Temperature": 0.3,
        
        // Nombre maximum de tokens dans la réponse (15 mots ≈ 30 tokens)
        "MaxTokens": 30
      }
    }
  }
}
